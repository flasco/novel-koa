  },
  "engines": {
    "node": "12.x"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/async": "^3.2.5",
    "@types/fs-extra": "^9.0.4",
    "@types/lru-cache": "^5.1.0",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "pricking-koa": "0.0.2-alpha.1",
    "async": "^3.2.0",
    "fs-extra": "^9.0.1",
    "koa-compose": "^4.1.0",
    "leancloud-storage": "^4.8.2",
    "leanengine": "^3.7.0",
    "lru-cache": "^6.0.0",
    "module-alias": "^2.2.2",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
