    "@pricking/cli": "^0.0.5",
    "@swc/cli": "^0.1.51",
    "@swc/core": "^1.2.103",
    "@types/async": "^3.2.5",
    "@types/cheerio": "^0.22.23",
    "@types/jest": "^26.0.19",
    "@types/lru-cache": "^5.1.0",
    "@types/node": "^14.14.10",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "tscpaths": "^0.0.9",
    "typescript": "^4.4.3",
    "zan-trashbin": "^1.0.1-beta.1",
    "zx": "^4.2.0"
  },
  "dependencies": {
    "@pricking/core": "^0.0.5",
    "async": "^3.2.0",
    "axios": "^0.22.0",
    "cheerio": "^1.0.0-rc.10",
    "iconv-lite": "^0.6.2",
    "koa-compose": "^4.1.0",
    "koa-ejs": "^4.3.0",
    "koa-static": "^5.0.0",
    "koa-views": "^7.0.0",
    "leancloud-storage": "^4.8.2",
    "leanengine": "^3.7.0",
    "lru-cache": "^6.0.0",
    "node-schedule": "^2.0.0",
    "tslib": "^2.3.1",
    "urlencode": "^1.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": "eslint"
  }
